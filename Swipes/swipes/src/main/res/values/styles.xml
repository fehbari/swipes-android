<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- Application themes -->
    <style name="Light_Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/light_theme_text</item>
        <item name="colorPrimary">@color/neutral_accent_color</item>
        <item name="colorPrimaryDark">@color/neutral_accent_color_dark</item>
        <item name="colorAccent">@color/light_theme_accent_color</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Dark_Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/dark_theme_text</item>
        <item name="colorPrimary">@color/neutral_accent_color</item>
        <item name="colorPrimaryDark">@color/neutral_accent_color_dark</item>
        <item name="colorAccent">@color/dark_theme_accent_color</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Dark_Theme_Activity_Overlay" parent="android:Theme.NoTitleBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/dark_theme_background</item>
    </style>

    <style name="Light_Theme_Activity_Overlay" parent="android:Theme.NoTitleBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/light_theme_background</item>
    </style>

    <!-- Splash screen theme. -->
    <style name="Splash_Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="19">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>
    </style>

    <!-- Login screen theme. -->
    <style name="Login_Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/light_theme_text</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

</resources>
