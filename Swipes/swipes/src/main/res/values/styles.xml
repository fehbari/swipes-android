<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/SwipesActionBar</item>
    </style>

    <style name="SwipesActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="MainActionBar" parent="SwipesActionBar">
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>

    <style name="ActivityOverlay" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/MainActionBar</item>
    </style>

    <style name="swipesTabButton" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
