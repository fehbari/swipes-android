<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swipesapp.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.swipesapp.android.app.SwipesApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.swipesapp.android.ui.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Splash_Theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.swipesapp.android.ui.activity.TasksActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.swipesapp.android.ui.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.swipesapp.android.ui.activity.TasksActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swipesapp.android.ui.activity.TasksActivity" />
        </activity>

        <activity
            android:name="com.swipesapp.android.ui.activity.SnoozeSettingsActivity"
            android:label="@string/title_activity_snooze_settings"
            android:parentActivityName="com.swipesapp.android.ui.activity.SettingsActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swipesapp.android.ui.activity.SettingsActivity" />
        </activity>

        <activity
            android:name="com.swipesapp.android.ui.activity.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.swipesapp.android.ui.activity.SettingsActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swipesapp.android.ui.activity.SettingsActivity" />
        </activity>

        <activity
            android:name="com.swipesapp.android.ui.activity.EditTaskActivity"
            android:label="@string/title_activity_edit_task"
            android:parentActivityName="com.swipesapp.android.ui.activity.TasksActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swipesapp.android.ui.activity.TasksActivity" />
        </activity>

        <activity
            android:name="com.swipesapp.android.ui.activity.SnoozeActivity"
            android:label="@string/title_activity_edit_task"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name="com.swipesapp.android.ui.activity.BlankActivityLight"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Light_Theme_Activity_Overlay" />

        <activity
            android:name="com.swipesapp.android.ui.activity.BlankActivityDark"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Dark_Theme_Activity_Overlay" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <receiver android:name="com.swipesapp.android.sync.receiver.SnoozeReceiver" />

        <receiver android:name="com.swipesapp.android.sync.receiver.SnoozeReceiver$ActionsReceiver" />

        <receiver
            android:name="com.swipesapp.android.sync.receiver.BootReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="17aee5fa869f24b705e00dba6d43c51becf5c7e4" />
    </application>

</manifest>
