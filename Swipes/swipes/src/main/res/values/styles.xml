<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- Application themes -->
    <style name="Light_Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/light_text</item>
        <item name="colorPrimary">@color/neutral_accent</item>
        <item name="colorPrimaryDark">@color/neutral_accent_dark</item>
        <item name="colorAccent">@color/neutral_accent_light</item>
        <item name="colorControlHighlight">@color/light_highlight</item>
        <item name="android:colorEdgeEffect" tools:targetApi="21">@color/light_highlight</item>
        <item name="android:actionOverflowButtonStyle">@style/Overflow_Menu</item>
    </style>

    <style name="Dark_Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/dark_text</item>
        <item name="colorPrimary">@color/neutral_accent</item>
        <item name="colorPrimaryDark">@color/neutral_accent_dark</item>
        <item name="colorAccent">@color/neutral_accent_light</item>
        <item name="colorControlHighlight">@color/dark_highlight</item>
        <item name="android:colorEdgeEffect" tools:targetApi="21">@color/dark_highlight</item>
        <item name="android:actionOverflowButtonStyle">@style/Overflow_Menu</item>
    </style>

    <!-- Toolbar themes. -->
    <style name="Light_Theme_Popup_Menu" parent="Light_Theme">
        <item name="android:colorBackground">@color/light_neutral_background</item>
    </style>

    <style name="Dark_Theme_Popup_Menu" parent="Dark_Theme">
        <item name="android:colorBackground">@color/dark_neutral_background</item>
    </style>

    <style name="Overflow_Menu" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_dark</item>
    </style>

    <!-- Tasks screen themes. -->
    <style name="Tasks_Theme_Light" parent="Light_Theme">
        <item name="colorAccent">@color/light_text</item>
    </style>

    <style name="Tasks_Theme_Dark" parent="Dark_Theme">
        <item name="colorAccent">@color/dark_text</item>
    </style>

    <!-- Login screen theme. -->
    <style name="Login_Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/light_text</item>
        <item name="android:windowBackground">@color/light_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Dialogs theme. -->
    <style name="Dialog_Theme_Light" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/Dialog_Animation</item>
        <item name="android:backgroundDimAmount">0.2</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:textColor">@color/light_text</item>
        <item name="colorAccent">@color/light_text</item>
        <item name="colorControlHighlight">@color/light_highlight</item>
        <item name="android:colorEdgeEffect" tools:targetApi="21">@color/light_highlight</item>
    </style>

    <style name="Dialog_Theme_Dark" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/Dialog_Animation</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:textColor">@color/dark_text</item>
        <item name="colorAccent">@color/dark_text</item>
        <item name="colorControlHighlight">@color/dark_highlight</item>
        <item name="android:colorEdgeEffect" tools:targetApi="21">@color/dark_highlight</item>
    </style>

    <!-- Dialog animation style. -->
    <style name="Dialog_Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- Preview themes. -->
    <style name="Tasks_Preview" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/preview_tasks</item>
        <item name="colorPrimary">@color/focus_accent</item>
        <item name="colorPrimaryDark">@color/focus_accent_dark</item>
    </style>

    <style name="Settings_Preview" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/preview_settings</item>
        <item name="colorPrimary">@color/neutral_accent</item>
        <item name="colorPrimaryDark">@color/neutral_accent_dark</item>
    </style>

    <style name="Evernote_Preview" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/preview_evernote</item>
        <item name="colorPrimary">@color/evernote_brand</item>
        <item name="colorPrimaryDark">@color/evernote_brand_dark</item>
    </style>

</resources>
