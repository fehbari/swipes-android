<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.HoloAccent.Light" />

    <style name="ActivityOverlay" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="swipesTabButton" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Application themes -->
    <style name="Light_Theme" parent="Theme.HoloAccent.Light">
        <item name="android:textColor">@color/light_theme_text</item>
        <item name="android:actionBarStyle">@style/Light_ActionBar</item>
        <item name="android:listViewStyle">@style/Light_ListView</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="accentColor">@color/light_theme_accent_color</item>
    </style>

    <style name="Dark_Theme" parent="Theme.HoloAccent">
        <item name="android:textColor">@color/dark_theme_text</item>
        <item name="android:actionBarStyle">@style/Dark_ActionBar</item>
        <item name="android:listViewStyle">@style/Dark_ListView</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="accentColor">@color/dark_theme_accent_color</item>
    </style>

    <!-- Action bar themes -->
    <style name="Light_ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_solid_light</item>
        <item name="android:titleTextStyle">@style/Light_ActionBar_Text</item>
    </style>

    <style name="Dark_ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_solid_dark</item>
        <item name="android:titleTextStyle">@style/Dark_ActionBar_Text</item>
    </style>

    <!-- Action bar text themes -->
    <style name="Light_ActionBar_Text" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/light_theme_text</item>
    </style>

    <style name="Dark_ActionBar_Text" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/dark_theme_text</item>
    </style>

    <!-- ListView themes -->
    <style name="Light_ListView" parent="@android:style/Widget.Holo.Light.ListView">
        <item name="android:background">@color/light_theme_background</item>
    </style>

    <style name="Dark_ListView" parent="@android:style/Widget.Holo.ListView">
        <item name="android:background">@color/dark_theme_background</item>
    </style>

</resources>
