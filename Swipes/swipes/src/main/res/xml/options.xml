<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Tweaks -->
    <PreferenceCategory
        android:key="group_tweaks"
        android:title="@string/group_tweaks">

        <CheckBoxPreference
            android:defaultValue="@bool/default_enable_location"
            android:key="settings_enable_location"
            android:summary="@string/options_location_detail"
            android:switchTextOff="@string/switch_off"
            android:switchTextOn="@string/switch_on"
            android:title="@string/options_location"
            android:widgetLayout="@layout/preference_switch_layout" />

        <CheckBoxPreference
            android:defaultValue="@bool/default_enable_background_sync"
            android:key="settings_enable_background_sync"
            android:summary="@string/options_background_sync_detail"
            android:switchTextOff="@string/switch_off"
            android:switchTextOn="@string/switch_on"
            android:title="@string/options_background_sync"
            android:widgetLayout="@layout/preference_switch_layout" />

        <CheckBoxPreference
            android:defaultValue="@bool/default_scroll_to_added_task"
            android:key="settings_scroll_to_added_task"
            android:summary="@string/options_scroll_to_added_detail"
            android:switchTextOff="@string/switch_off"
            android:switchTextOn="@string/switch_on"
            android:title="@string/options_scroll_to_added"
            android:widgetLayout="@layout/preference_switch_layout" />

    </PreferenceCategory>

    <!-- Notifications -->
    <PreferenceCategory
        android:key="group_notifications"
        android:title="@string/group_notifications">

        <CheckBoxPreference
            android:defaultValue="@bool/default_enable_notifications"
            android:key="settings_enable_notifications"
            android:summary="@string/options_snoozed_tasks_detail"
            android:switchTextOff="@string/switch_off"
            android:switchTextOn="@string/switch_on"
            android:title="@string/options_snoozed_tasks"
            android:widgetLayout="@layout/preference_switch_layout" />

        <CheckBoxPreference
            android:defaultValue="@bool/default_enable_daily_reminder"
            android:key="settings_enable_daily_reminder"
            android:summary="@string/options_daily_reminder_detail"
            android:switchTextOff="@string/switch_off"
            android:switchTextOn="@string/switch_on"
            android:title="@string/options_daily_reminder"
            android:widgetLayout="@layout/preference_switch_layout" />

        <CheckBoxPreference
            android:defaultValue="@bool/default_enable_weekly_reminder"
            android:key="settings_enable_weekly_reminder"
            android:summary="@string/options_weekly_reminder_detail"
            android:switchTextOff="@string/switch_off"
            android:switchTextOn="@string/switch_on"
            android:title="@string/options_weekly_reminder"
            android:widgetLayout="@layout/preference_switch_layout" />

        <CheckBoxPreference
            android:defaultValue="@bool/default_enable_vibration"
            android:key="settings_enable_vibration"
            android:summary="@string/options_vibration_detail"
            android:switchTextOff="@string/switch_off"
            android:switchTextOn="@string/switch_on"
            android:title="@string/options_vibration"
            android:widgetLayout="@layout/preference_switch_layout" />

        <CheckBoxPreference
            android:defaultValue="@bool/default_use_system_sound"
            android:key="settings_use_system_sound"
            android:summary="@string/options_system_sound_detail"
            android:switchTextOff="@string/switch_off"
            android:switchTextOn="@string/switch_on"
            android:title="@string/options_system_sound"
            android:widgetLayout="@layout/preference_switch_layout" />

    </PreferenceCategory>

</PreferenceScreen>